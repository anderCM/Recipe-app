<h2 class="text-2xl font-bold text-center text-gray-700">Food List </h2>

<div role="alert" class="container mx-auto my-10">
  <div class="flex justify-end my-4">
    <%= link_to "Add Food", '/foods/new',  class:"focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-green-600 rounded text-white px-8 py-2 text-sm" %>
  </div>
  <table class="w-full text-center border-separate border-spacing-4 bg-gray-800 text-white rounded">
    <thead>
      <tr class="text-white">
        <th>Name</th>
        <th>Measurement_unit</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
     <% @foods.each do |food| %>
      <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
        <td><%= button_to "Delete", food_path(food) , method: :delete, data: {confirm: "Are you sure you want to delete?"}, class:"bg-red-600 text-white rounded  w-full" %></td>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>
