<div role="alert" class="container mx-auto ">
  <div class="flex justify-end my-4">
    <%= link_to "Add Recipe", new_recipe_path,  class:"focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-green-600 rounded text-white px-8 py-2 text-sm" %>
  </div>
  <% @recipes.each do |recipe| %>
    <div class="bg-gray-800 grid grid-cols-3 py-8 px-5 md:px-10 shadow-md rounded border border-gray-400 my-4">
      <div class="col-span-1">
        <p class="text-white"><%= recipe.name %></p>
        <%= button_to("Delete", recipe_path(recipe),  class:"focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-600 transition duration-150 ease-in-out hover:bg-red-500 bg-red-600 rounded text-white px-3 py-1 text-sm", method: :delete) %>
      </div>
      <p class="col-span-2 text-white"><%= recipe.description %></p>
    </div>
  <% end %>
</div>