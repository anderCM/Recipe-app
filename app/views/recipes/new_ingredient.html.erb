<%= form_with model:@food, url: "/recipes/#{@recipe.id}/add_ingredient", method: :post  do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :measurement_unit %>
        <%= form.text_field :measurement_unit %>
    </div>
    <div>
        <%= form.label :quantity %>
        <%= form.text_field :quantity %>
    </div>
    <div>
        <%= form.label :price %>
        <%= form.text_field :price %>
    </div>
    <%= form.submit "Add Food" %>
<% end %>