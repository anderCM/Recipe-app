<div role="alert" class="container mx-auto ">
  <h2 class="text-2xl font-bold text-center text-gray-700">List of recipes</h2>
  <div class="flex justify-end my-4">
    <%= link_to "Add Recipe", new_recipe_path,  class:"focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-green-600 rounded text-white px-8 py-2 text-sm", id:"add-recipe" %>
  </div>
  <% @recipes.each do |recipe| %>
    <div class="bg-gray-800 hover:bg-gray-700 hover:scale-105 grid grid-cols-3 py-8 px-5 md:px-10 shadow-md rounded border border-gray-400 my-4" >
      <div class="col-span-1">
        <%= link_to recipe.name, recipe_path(recipe), class:"text-white", id:"recipe_link_#{recipe.id}" %>
        <%= button_to("Delete", recipe_path(recipe),  class:"focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-600 transition duration-150 ease-in-out hover:bg-red-500 bg-red-600 rounded text-white px-3 py-1 text-sm mt-3", method: :delete, id:"delete-recipe-#{recipe.id}") %>
      </div>
      <%= link_to recipe.description, recipe_path(recipe), class:"col-span-2 text-white" %>
    </div>
  <% end %>
</div>