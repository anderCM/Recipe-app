<div role="alert" class="container mx-auto">
  <div class="flex justify-end my-4">
    <%= link_to "Add Recipe", new_recipe_path,  class:"focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-green-600 rounded text-white px-8 py-2 text-sm" %>
  </div>
  <% @recipes.each do |recipe| %>
    <div class="py-8 px-5 md:px-10 bg-white shadow-md rounded border border-gray-400 my-4">
      <p><%= recipe.name %></p>
    </div>
  <% end %>
</div>