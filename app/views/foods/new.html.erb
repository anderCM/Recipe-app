<%= form_with model:@food, url: foods_path do |form| %>
<div role="alert" class="container mx-auto w-11/12 md:w-2/3 max-w-lg">
      <div class="relative py-8 px-5 md:px-10 bg-white shadow-md rounded border border-gray-400">
          <h1 class="text-center text-gray-800 font-lg font-bold tracking-normal leading-tight mb-4">Add Food</h1>

          <%= form.label :name, class: 'text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
          <%= form.text_field :name, class: 'mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-indigo-700 font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', placeholder: 'Soupe Ã  l\'oignon' %>
          
          <%= form.label :measurement_unit, class: 'text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
          <%= form.text_field :measurement_unit, class: 'mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-indigo-700 font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', placeholder: 'kg/unit' %>

          <%= form.label :quantity, class: 'text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
          <%= form.number_field :quantity, class: 'mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-indigo-700 font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', placeholder: '1' %>
          
          <%= form.label :price, class: 'text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
          <%= form.number_field :price, class: 'mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-indigo-700 font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', placeholder: 'Enter amount' %>

          <div class="flex items-center justify-start w-full">
                <%= form.submit "Add Food", class: 'focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-green-600 rounded text-white px-8 py-2 text-sm cursor-pointer' %>
                <%= link_to "Cancel", foods_path, class:"focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-red-400 ml-3 bg-red-600 transition duration-150 text-white ease-in-out hover:border-red-400 hover:bg-red-500 border rounded px-8 py-2 text-sm" %>
          </div>
      </div>
  </div>
<% end %>