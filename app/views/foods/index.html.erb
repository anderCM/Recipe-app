<div role="alert" class="container mx-auto ">
  <div class="flex justify-end my-4">
    <%= link_to "Add Food", '/foods/new',  class:"focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-green-600 rounded text-white px-8 py-2 text-sm" %>
  </div>
  <table class="w-full text-center border-separate border-spacing-4 bg-gray-800 rounded">
    <thead>
      <tr class="text-white">
        <th>Name</th>
        <th>Measurement_unit</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
     <% @foods.each do |food| %>
      <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.quantity %></td>
          <td><%= food.price %></td>
          <td class="bg-red-600 text-white rounded-lg"><%= button_to "Delete", '/foods/destroy' %></td>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>